.container { padding: 20rpx; min-height: 100vh; background: linear-gradient(135deg, #f5f7fa 0%, #e4efe9 100%); }
.card { background: white; border-radius: 24rpx; padding: 40rpx; margin-bottom: 30rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05); }
.section { margin-bottom: 50rpx; }
.title { display: block; font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 30rpx; }
.picker { display: flex; justify-content: space-between; align-items: center; padding: 30rpx; background: #f8f9fa; border-radius: 16rpx; border: 2rpx solid #e9ecef; }
.arrow { color: #999; }
.standard-char { text-align: center; margin-top: 40rpx; }
.standard-char image { width: 200rpx; height: 200rpx; margin-bottom: 20rpx; }
.standard-char text { display: block; color: #666; font-size: 28rpx; }
.upload-area { height: 400rpx; border: 4rpx dashed #c3dafe; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; background: #f0f9ff; }
.upload-placeholder { text-align: center; }
.icon { font-size: 80rpx; color: #a0aec0; display: block; }
.hint { display: block; font-size: 24rpx; color: #a0aec0; margin-top: 10rpx; }
.preview-image { width: 100%; height: 100%; border-radius: 20rpx; }
.primary-btn { background: linear-gradient(to right, #4fbbd6, #36a1d6); color: white; border: none; border-radius: 16rpx; padding: 30rpx; font-size: 32rpx; font-weight: bold; margin-top: 40rpx; }
.primary-btn[disabled] { background: #ccc; }
.tip-box { background: #fff9db; border: 2rpx solid #ffec99; border-radius: 16rpx; padding: 30rpx; }
.tip-title { font-weight: bold; color: #5a4405; display: block; margin-bottom: 10rpx; }
.tip-content { font-size: 26rpx; color: #5a4405; }